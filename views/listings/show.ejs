<% layout("/layouts/boilerplate")%>


    <h3>Listing Details : </h3>
    <ul>
        <li>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <!-- <li><%= listing.image %></a></li> -->
        <!-- Check if listing.price exists, else display 'Price not available' -->
        <li>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : 'Price not available' %>
        </li>
        <li>
            <%= listing.location %>
        </li>
        <li>
            <%= listing.country %>
        </li>
    </ul>
    <!-- <br> -->
    <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a>
    <br><br>
    <form action="/listings/<%= listing._id %>/?_method=DELETE" method="post">
        <button>Delete this listing.</button>
    </form>