<% layout("/layouts/boilerplate")%>

<h3>All Listings</h3>
<!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col">
                <img src="<%= listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem"
                    onerror="this.onerror=null; this.src='https://images.pexels.com/photos/358636/pexels-photo-358636.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1';" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b> <%= listing.title %> </b> <br />
                        <!-- Check if price exists, otherwise display 'Price not available' -->
                        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : 'Price not available' %> / night
                    </p>
                </div>
            </div>
        </a>
        <%}%>
    </div>
    